@model Week5CodeChallenge.Models.ContactForm

@{
    ViewBag.Title = "Contact Us";
}
<div id="mainContact">
<h2>Contact Us</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="display:inline-block;">
        <legend style="text-align:center;">ContactForm</legend>

        
 <div style="position:relative;float:left; margin-left:25%;">
        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="editor-field" >
            @Html.EditorFor(model => model.FirstName)
            
        </div>
</div>
        <div >
        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            
        </div>
    </div>
        <div style="position:relative;float:left;margin-left:25%;">
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            
        </div>
</div>
        <div >
        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            
        </div>
</div>
        <div style="margin-left:37.5%;">
        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyName)
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompanyName)
            
        </div>
</div>
        <div style="position:relative;float:left;margin-left:0;">
        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectDescription)
            @Html.ValidationMessageFor(model => model.ProjectDescription)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ProjectDescription)
            
        </div>
</div>
        <div style="position:relative;float:left;margin-left:3.5%;">
        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comment)
            
            
        </div>
</div>
        <p style="position:relative;float:left;">
            <input type="submit" value="Send" />
        </p>
        <p style="color:red;font-size:medium;font-weight:bold;position:relative;float:right;">*All Fields Are Required*</p>
        
    </fieldset>
}

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
